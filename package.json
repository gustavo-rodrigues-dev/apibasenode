{
  "name": "boilerplate-api-express-node",
  "version": "1.0.0",
  "description": "Api OOD base",
  "author": "Gustavo S. Rodrigues <gustavo.beavis@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/gustavobeavis/apibasenode",
  "main": "./dist/index.js",
  "engines": {
    "node": ">=6.9.0"
  },
  "scripts": {
    "start": "babel-node ./src/index.js",
    "prestart:dev": "./node_modules/.bin/pm2 delete ecosystem.json; ",
    "start:dev": "pm2 start --no-daemon -s ecosystem.json",
    "start:dev:stop": "./node_modules/.bin/pm2 delete ecosystem.json",
    "start:dev:kill": "./node_modules/.bin/pm2 kill",
    "prestart:builded": "npm run build",
    "start:builded": "node ./dist/index.js",
    "db:migrate": "./node_modules/.bin/sequelize db:migrate",
    "db:migrate:destroy": "./node_modules/.bin/sequelize db:migrate:undo:all",
    "db:seeder": "./node_modules/.bin/sequelize db:seed:all",
    "db:seeder:destroy": "./node_modules/.bin/sequelize db:seed:undo:all",
    "prebuild": "rm -rf ./dist",
    "build": "./node_modules/.bin/babel ./src --out-dir dist/",
    "debug": "babel-node ./src/index.js --nolazy --inspect=0.0.0.0:9229",
    "pretest": "rm -f ./database/*.test.*; cross-env NODE_ENV=test ./node_modules/.bin/sequelize db:migrate; cross-env NODE_ENV=test node_modules/.bin/sequelize db:seed:all",
    "test": "cross-env NODE_ENV=test mocha test --exit",
    "postest": "npm run clean:build",
    "cover": "cross-env NODE_ENV=test nyc mocha test --exit",
    "coverreport": "nyc report --reporter=lcov",
    "precoveralls": "mkdir coverage",
    "coveralls": "npm run cover -- --report lcovonly;npm run coverreport; cat ./coverage/lcov.info | coveralls",
    "coverserver": "nyc report --reporter=lcov; ./node_modules/.bin/browser-sync start --server \"coverage/lcov-report\"/",
    "apidoc": "apidoc -i ./src/http/routes -o ./docs",
    "preapidoc:server": "npm run apidoc",
    "apidoc:server": "./node_modules/.bin/browser-sync start --server ./docs",
    "clean": "rm -f package-lock.json; rm -rf node_modules",
    "clean:build": "rm -rf dist/",
    "lint": "eslint src/**/**/*.js src/**/*.js src/*.js  database/**/*.js test/**/**/*.js test/*.js",
    "lint:fix": "eslint src/**/**/*.js src/**/*.js src/*.js  database/**/*.js test/**/**/*.js test/*.js --fix"
  },
  "nyc": {
    "exclude": [
      "test",
      "dist",
      "database",
      "log",
      "public",
      "docs",
      "./src/domain",
      "./src/config",
      "./src/http/middlewares/jwt.js"
    ]
  },
  "dependencies": {
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-3": "^6.24.1",
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.2",
    "consign": "^0.1.6",
    "cors": "^2.8.4",
    "crypto-js": "^3.1.9-1",
    "express": "^4.16.3",
    "express-winston": "^3.0.0",
    "helmet": "^3.12.0",
    "moment": "^2.21.0",
    "passport": "^0.4.0",
    "passport-hash": "^0.6.1",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.4.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^6.19.1",
    "sqlite3": "^4.0.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "apidoc": "0.17.6",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "9.0.0",
    "babel-istanbul": "0.12.2",
    "babel-plugin-istanbul": "5.0.1",
    "babel-register": "6.26.0",
    "browser-sync": "2.24.7",
    "coveralls": "3.0.2",
    "cross-env": "5.2.0",
    "eslint": "5.6.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "7.0.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "istanbul": "0.4.5",
    "mocha": "5.2.0",
    "nyc": "13.0.1",
    "pm2": "3.1.2",
    "sequelize-cli": "4.1.1",
    "supertest": "3.3.0"
  }
}

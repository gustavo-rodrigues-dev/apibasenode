{
  "apps" : [
    {
      "name"              : "API boilerplate",
      "script"            : "./src/index.js",
      "watch"             : ["./src"],
      "exec_interpreter"  : "babel-node",
      "exec_mode"         : "fork",
      "error_file"        : "./logs/err.log",
      "out_file"          : "./logs/out.log",
      "log_date_format"   : "YYYY-MM-DD HH:mm Z",
      "node_args": ["--nolazy", "--inspect=0.0.0.0:9229"]
    }
  ]
}
